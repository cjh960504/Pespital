        <%}%>
        <%}%>     -->
        <%if(currentPage>3){%><a href="/board/list?currentPage=<%=currentPage-3%>">[이전]</a><%}%>
        <%if(currentPage>2){%><a href="/board/list?currentPage=<%=currentPage-2%>"><%=(currentPage-2)%></a><%}%>
        <%if(currentPage>1){%><a href="/board/list?currentPage=<%=currentPage-1%>"><%=(currentPage-1)%></a><%}%>
        <%=currentPage%>
        <%if(currentPage<lastPage){%><a href="/board/list?currentPage=<%=currentPage+1%>"><%=(currentPage+1)%></a><%}%>
        <%if((currentPage+1)<lastPage){%><a href="/board/list?currentPage=<%=currentPage+2%>"><%=(currentPage+2)%></a><%}%>
        <%if(currentPage+2<lastPage){%><a href="/board/list?currentPage=<%=currentPage+3%>">[다음]</a><%}%>
    </td>  
  </tr>
  <tr>
