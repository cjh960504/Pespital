<h1 style="color:tomato; text-align:center">PETSPITAL</h1>
<%if(nickname!=""){%>
<h3><%=nickname%></h3> 
<a href="/member/logout">Logout</a>
<%}else{%>
    <a href="/member/login">Login</a>
<%}%>

<table class="table table-hover">
  <thead>
  <tr>
    <th scope="col">제목</th>
    <th scope="col">작성자</th>
    <th scope="col">작성일</th>
    <th scope="col">조회수</th>
    <th scope="col">좋아요👍</th>
    <th scope="col">싫어요👎</th>
  </tr>
</thead>
  
  <tbody>
  <%for(var i=0;i<boardArray.length;i++){%>
    <%var board = boardArray[i]%>
  <tr class="table-info">
    <input type="hidden" name="board_id" value="<%=board.board_id%>"/>
    <!-- <%if(board.img==null){%>
      <td><img src="/uploads/default.png" alt=""></td>
    <%}else{%>
      <td><img src="/uploads/<%=board.img%>" alt="<%=board.img%>"></td>
    <%}%> -->
    <th scope="row"><a href="/board/detail?board_id=<%=board.board_id%>&member_id=<%=id%>"><%=board.board_title%></a></th>
    <td><%=board.member_id%></td>
    <td><%=board.regdate%></td>
    <td><%=board.board_hit%></td>
    <td><%=board.board_good%></td>
    <td><%=board.board_bad%></td>
  </tr>
  <%}%>
</tbody>
  <tr>
    <td>
      <!-- <%for(var i=1; i<=lastPage; i++){%>
        <%if(i==currentPage){%>
          <a href="#"><%=i%></a>
