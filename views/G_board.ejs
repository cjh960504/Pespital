    @import url("bootstrap.css");

    .btn-outline-primary {
      color: #e95420;
      border-color: #e95420;
    }

    .btn-outline-primary:hover {
      color: #fff;
      background-color: #e95420;
      border-color: #e95420;
    }

    .btn-outline-primary:focus,
    .btn-outline-primary.focus {
      box-shadow: 0 0 0 0.2rem rgba(233, 84, 32, 0.5);
    }

    .btn-outline-primary.disabled,
    .btn-outline-primary:disabled {
      color: #e95420;
      background-color: transparent;
    }

    .btn-outline-primary:not(:disabled):not(.disabled):active,
    .btn-outline-primary:not(:disabled):not(.disabled).active,
    .show>.btn-outline-primary.dropdown-toggle {
      color: #fff;
      background-color: #e95420;
      border-color: #e95420;
    }

    .btn-outline-primary:not(:disabled):not(.disabled):active:focus,
    .btn-outline-primary:not(:disabled):not(.disabled).active:focus,
    .show>.btn-outline-primary.dropdown-toggle:focus {
      box-shadow: 0 0 0 0.2rem rgba(233, 84, 32, 0.5);
    }
  </style>
  <script>
    $(function () {
      $("button").on("click", function () {
        location.href = "/board/beforeRegist";
      });
    });
    function checkValue() {

    }
  </script>
</head>

<body>

  <h1 style="color:tomato; text-align:center">PETSPITAL</h1>
  <%if(nickname!=""){%>
  <h3><%=nickname%></h3>
  <a href="/member/logout">Logout</a>
  <%}else{%>
  <a href="/member/login">Login</a>
  <%}%>
  <form action="">
    <input type="search" name="query" placeholder="검색어"/>
    <span><button>검색</button></span>
  </form>
  <a href="/board/list?currentPage=1&sort=board_id">최신순</a>
  <a href="/board/list?currentPage=1&sort=board_hit">조회수</a>
  <a href="/board/list?currentPage=1&sort=board_good">좋아요수</a>
  <div class="container">
    <table class="table table-hover m-md-auto" style="border-collapse: collapse; border-radius: 1em; overflow: hidden;">
      <tbody>
      <%for(var i=0;i<boardArray.length;i++){%>
  <%var board = boardArray[i]%>
  <input type="hidden" name="board_id" value="<%=board.board_id%>" />
  <tr class="table-info">
    <td rowspan="2" style="text-align: center; vertical-align: middle;"><%=board.board_hit%></td>
    <td colspan="3" style="vertical-align: middle;"><a
        href="/board/detail?board_id=<%=board.board_id%>&member_id=<%=id%>"><%=board.board_title%></a></td>
  </tr>
  <tr class="table-info">
    <td style="text-align: center; vertical-align: middle;"><%=board.board_good%></td>
    <td style="text-align: center; vertical-align: middle;"><%=board.regdate%></td>
    <td style="text-align: center; vertical-align: middle;"><%=board.member_id%></td>
  </tr>
  <%}%>
    </tbody>
    </table>
    </div>
<%if(startPage>1){%>
  <a href="/board/list?currentPage=1"><<</a>
      <%}%>
<%if(currentPage>1){%>
      <a href="/board/list?currentPage=<%=currentPage-1%>&query=<%=query%>&sort=<%=sort%>"><</a>
          <%}%>

<%for(var i=startPage; i<=endPage;i++){%>
          <%if(i==currentPage){%>
          <%=i%>
          <%}else{%>
          <a href="/board/list?currentPage=<%=i%>&query=<%=query%>&sort=<%=sort%>"><%=i%></a>
          <%}%>
<%}%>
          <%if(currentPage<totalPage){%>
          <a href="/board/list?currentPage=<%=currentPage+1%>&query=<%=query%>&sort=<%=sort%>">></a>
          <%}%>
<%if(endPage<totalPage){%>
          <a href="/board/list?currentPage=<%=totalPage%>&query=<%=query%>&sort=<%=sort%>">>></a>
          <%}%> <br>
<button type="button" class="btn btn-outline-primary">글쓰기</button>


</body>
</html>